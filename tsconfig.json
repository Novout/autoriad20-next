{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "vitepress"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "./**/*.vue"
  ],
  "exclude": ["dist", "node_modules"]
}